<div class="row">
  <div class="small-12 columns">
  	<h1>Producto </h1><h3><small>Información acerca de <%= @producto.descripcion %></small></h3>
  	<ul class="pricing-table">
		  <li class="title"><%= @producto.descripcion %></li>
		  <li class="description"><%= image_tag @producto.imagen_url(:thumb).to_s %></li>
		  <li class="price"><%= @producto.precio %></li>
		  <li class="description"><%= @producto.supermercado.nombre %></li>
		  <li class="cta-button">
			  <%= form_tag agregar_producto_path(:id => params[:id]) do %>
			  	<%= submit_tag "Agrega a Comparación", :class => "button" %>
				<% end %>
		  </li>
		</ul>
	</div>
	<br></br>
	<div class="row">
	  <div class="small-2 large-4 columns"></div>
	  <div class="small-4 large-4 columns"></div>
	  <div class="small-6 large-4 columns">
		  <ul class="side-nav">
			  <li><a href="/">Volver</a></li>
			</ul>
	  </div>
	</div>
</div>